{
    "package": {
        "productName": "Mira",
        "version": "../package.json"
    },
    "build": {
        "beforeBuildCommand": "pnpm build:vite",
        "devPath": "http://localhost:1420",
        "distDir": "../dist",
        "withGlobalTauri": false
    },
    "tauri": {
        "windows": [
            {
                "title": "Mira",
                "width": 300,
                "height": 500,
                "titleBarStyle": "Overlay",
                "fullscreen": false,
                "resizable": true
            }
        ],
        "allowlist": {
            "all": true
        },
        "security": {
            "csp": null
        },
        "bundle": {
            "active": true,
            "identifier": "moe.nyaacinth.mira",
            "category": "Utility",
            "shortDescription": "Mira Application",
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.icns",
                "icons/icon.ico"
            ],
            "targets": "all",
            "macOS": {
                "entitlements": null,
                "exceptionDomain": "",
                "frameworks": [],
                "providerShortName": null,
                "signingIdentity": null
            },
            "windows": {
                "certificateThumbprint": null,
                "digestAlgorithm": "sha256",
                "timestampUrl": ""
            }
        },
        "updater": {
            "active": false
        }
    }
}
